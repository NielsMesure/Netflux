{% extends 'base.html.twig' %}

{% block title %}Se connecter - Netflux{% endblock %}

{% block content %}
<div class="container register-custom" >
<form method="post" >
    <div class="container register-custom">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
        {% for message in app.flashes('notice') %}
            <div class="alert alert-info">{{ message }}</div>
        {% endfor %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connectés en temps que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}


    <h1 class="h3 mb-3 font-weight-normal">Connexion à votre espace abonné</h1>
    <div class=" mx-auto ">
    <label for="inputEmail" class="pb-1">Votre Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control research-field" autocomplete="email" placeholder="Votre adresse email" required autofocus>
    <label for="inputPassword" class="pt-3 pb-1">Votre Mot de Passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control research-field" autocomplete="current-password" placeholder="Votre mot de passe" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <hr>
    <button class="btn btn-lg btn-primary custom-submit" type="submit">
        Se connecter
    </button>
        <p class="text-center mt-3"><a href="{{ path('app_reset_password') }}" class="color-custom"> Mot de passe oublié?</a></p>
        <p class="text-center mt-3">Vous ne possédez pas de compte ?  <a href="{{ path('app_register') }}" class="color-custom"> Connectez-Vous</a></p>

    </div>
        </div>
</form>
    </div>
{% endblock %}
